<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/bnv_main"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:backgroundTint="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/main_bottom_menu"
        app:iconTintActive="@color/primary"
        app:sideMargins="@dimen/margin_std"
        app:indicatorColor="@color/light_grey"
        app:cornerRadius="@dimen/margin_std"
        app:textColor="@color/primary"
        app:iconSize="24dp"
        app:iconMargin="@dimen/margin_std"
        app:textSize="15sp"
        app:iconTint="@color/dark_grey"
        app:indicatorRadius="@dimen/margin_component"
        app:corners="top_left|top_right"/>
</LinearLayout>