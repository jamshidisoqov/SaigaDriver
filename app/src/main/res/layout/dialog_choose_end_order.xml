<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_language"
    android:orientation="vertical"
    android:padding="@dimen/margin_extra_large">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/end_order"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_extra_large" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/end_order_really"
        android:textColor="@color/dark_grey"
        android:textSize="16sp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_extra_large" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_end_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_home_btn"
        android:letterSpacing="0.2"
        android:text="@string/end_order"
        android:textSize="18sp" />

</LinearLayout>